<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/14" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jblockui.MeasurementsController">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80" halignment="LEFT" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20" halignment="RIGHT" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="BASELINE" />
        </rowConstraints>
        <Label text="Set Measurements" underline="true">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <ImageView GridPane.columnIndex="1">
            <Image url ="file:images/logo_small.jpg"/>
        </ImageView>
    </GridPane>
        <Separator />
        <ScrollPane fitToWidth="true">
                <VBox fx:id="measurementsStack" alignment="CENTER" />
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </ScrollPane>
        <Separator />
        <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="backButton" mnemonicParsing="false" text="Cancel" />
                <Button fx:id="nextButton" mnemonicParsing="false" text="Save" />
        </HBox>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
