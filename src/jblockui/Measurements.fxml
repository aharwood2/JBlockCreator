<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/14" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jblockui.MeasurementsController">
    <children>
        <Label text="Set Measurements" textAlignment="CENTER" underline="true">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Separator prefWidth="200.0" />
        <ScrollPane prefHeight="200.0" prefWidth="200.0">
            <content>
                <VBox fx:id="measurementsStack" alignment="CENTER" />
            </content>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </ScrollPane>
        <Separator prefWidth="200.0" />
        <Button mnemonicParsing="false" onAction="#onNextButtonClick" text="Done" />
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
